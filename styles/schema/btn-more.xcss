.btn-more {
    display: flex;
    align-items: center;
    justify-content: center;

    width: 240px;
    height: 50px;

    border: none;
    border-radius: 4px;
    background-color: rgba(109, 109, 110, 0.7);
    color: white;
    font-weight: bold;
    font-size: 18px;

    svg {
        width: 28px;
        padding-right: 10px;
    }

    &:hover {
        background-color: rgba(109, 109, 110, 0.4);
    }
}