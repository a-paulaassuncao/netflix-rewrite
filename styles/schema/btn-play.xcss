.btn-play {
    display: flex;
    align-items: center;
    justify-content: center;

    width: 150px;
    height: 50px;

    border: none;
    border-radius: 4px;
    background-color: white;
    font-weight: bold;
    font-size: 18px;

    svg {
        width: 28px;
        padding-right: 10px;
    }

    &:hover {
        background-color: rgba(255, 255, 255, 0.75);
    }
}